;;; Lexical Rules
;;;;;;;;;;;;;;;;;;;

;;; Intermediate rule types

person-rule-dtr := word-or-lexrule.
tr-aug-rule-dtr := word-or-lexrule.
aug-rule-dtr := word-or-lexrule.
tense-rule-dtr := word-or-lexrule.
aspect-rule-dtr := word-or-lexrule.
tr-min-rule-dtr := word-or-lexrule.

;;; Lexical rule types

case-pc-lex-rule-super := add-only-no-ccont-rule &
  [ INFLECTED [ CASE-PC-FLAG +,
                TENSE-FLAG #tense,
                PERSON-FLAG #person,
                ASPECT-FLAG #aspect ],
    DTR noun1-noun-lex &
        [ INFLECTED [ TENSE-FLAG #tense,
                      PERSON-FLAG #person,
                      ASPECT-FLAG #aspect ] ] ].

erg-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE erg ].

all-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE all ].

abl-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE abl ].

loc-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE loc ].

abs-lex-rule := case-pc-lex-rule-super & const-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE abs ].

caus-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE cau ].

lat-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE lat ].

dir-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE dir ].

perl-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE per ].

com-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE com ].

source-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE sou ].

semb-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE sem ].

reason-lex-rule := case-pc-lex-rule-super & infl-lex-rule &
  [ SYNSEM.LOCAL.CAT.HEAD.CASE rea ].

aspect-lex-rule-super := add-only-no-ccont-rule & infl-lex-rule &
  [ INFLECTED [ ASPECT-FLAG +,
                TENSE-FLAG #tense,
                PERSON-FLAG #person,
                CASE-PC-FLAG #case-pc ],
    DTR aspect-rule-dtr &
        [ INFLECTED [ TENSE-FLAG #tense,
                      PERSON-FLAG #person,
                      CASE-PC-FLAG #case-pc ] ] ].

cont-lex-rule := aspect-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.ASPECT cont ].

rem-pst-lex-rule := aspect-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.ASPECT rem ].

rec-pst-lex-rule := aspect-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.ASPECT rec ].

pfv-lex-rule := aspect-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.ASPECT pfv ].

fut-aspect-lex-rule := aspect-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE fut ].

tense-lex-rule-super := add-only-no-ccont-rule & aspect-rule-dtr & person-rule-dtr & tr-min-rule-dtr &
  [ INFLECTED [ TENSE-FLAG +,
                PERSON-FLAG #person,
                ASPECT-FLAG #aspect,
                CASE-PC-FLAG #case-pc ],
    DTR tense-rule-dtr &
        [ INFLECTED [ PERSON-FLAG #person,
                      ASPECT-FLAG #aspect,
                      CASE-PC-FLAG #case-pc ] ] ].

pst-lex-rule := infl-lex-rule & tense-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE pst ].

fut-tense-lex-rule := infl-lex-rule & tense-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE fut ].

prs-lex-rule := const-lex-rule & tense-lex-rule-super &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE prs ].

person-lex-rule-super := add-only-no-ccont-rule & aspect-rule-dtr & infl-lex-rule &
  [ INFLECTED [ PERSON-FLAG +,
                TENSE-FLAG #tense,
                ASPECT-FLAG #aspect,
                CASE-PC-FLAG #case-pc ],
    DTR person-rule-dtr &
        [ INFLECTED [ TENSE-FLAG #tense,
                      ASPECT-FLAG #aspect,
                      CASE-PC-FLAG #case-pc ] ] ].

1min-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 1min_excl ].

2min-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 2min ].

3min-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 3min ].

1plus2min-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 1min_incl ].

1aug-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 1aug ].

2aug-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 2aug ].

3aug-lex-rule := person-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PERNUM 3aug ].

aug-lex-rule := add-only-no-ccont-rule & aspect-rule-dtr & infl-lex-rule & person-rule-dtr & tense-rule-dtr & tr-min-rule-dtr &
  [ INFLECTED #infl,
    DTR aug-rule-dtr &
        [ INFLECTED #infl ] ].

tr-min-lex-rule := add-only-no-ccont-rule & aspect-rule-dtr & infl-lex-rule & person-rule-dtr &
  [ INFLECTED #infl,
    DTR tr-min-rule-dtr &
        [ INFLECTED #infl ] ].

tr-aug-lex-rule := add-only-no-ccont-rule & aspect-rule-dtr & aug-rule-dtr & infl-lex-rule & person-rule-dtr & tense-rule-dtr & tr-min-rule-dtr &
  [ INFLECTED #infl,
    DTR tr-aug-rule-dtr &
        [ INFLECTED #infl ] ].

